{
  "name": "bumpster",
  "version": "0.1.1",
  "description": "A CLI tool for semantic version management",
  "main": "dist/bump-version.js",
  "type": "module",
  "bin": {
    "bump": "./dist/bump-version.js",
    "bump-js": "./dist/bump-version.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/bump-version.js",
    "dev": "tsx src/bump-version.ts",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "prebuild": "rimraf dist",
    "prepublishOnly": "npm run build",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint && npm run typecheck && npm run test",
    "check-report": "node scripts/check-report.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yarnovo/bumpster-js.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yarnovo/bumpster-js/issues"
  },
  "homepage": "https://github.com/yarnovo/bumpster-js#readme",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.10",
    "@types/prompts": "^2.4.9",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "execa": "^9.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/semver": "^7.7.0",
    "chalk": "^5.4.1",
    "prompts": "^2.4.2",
    "semver": "^7.7.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
