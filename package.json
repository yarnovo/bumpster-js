{
  "name": "@ai-app-base/bump-version-js",
  "version": "0.1.0",
  "description": "A CLI tool for semantic version management",
  "main": "dist/bump-version.js",
  "type": "module",
  "bin": {
    "bump-version-js": "./dist/bump-version.js",
    "bvj": "./dist/bump-version.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "chmod +x dist/bump-version.js",
    "dev": "tsx src/bump-version.ts",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage",
    "prebuild": "rimraf dist",
    "prepublishOnly": "npm run build",
    "prepare": "husky",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ai-app-base/bump-version-js.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ai-app-base/bump-version-js/issues"
  },
  "homepage": "https://github.com/ai-app-base/bump-version-js#readme",
  "files": [
    "dist/"
  ],
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/node": "^24.0.10",
    "@types/prompts": "^2.4.9",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.30.1",
    "execa": "^9.6.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/semver": "^7.7.0",
    "chalk": "^5.4.1",
    "prompts": "^2.4.2",
    "semver": "^7.7.2"
  }
}
